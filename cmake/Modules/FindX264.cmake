# find openh264
# X264_FOUND - system has the openh264 library
# X264_INCLUDE_DIR
# X264_LIBRARIES
if(X264_INCLUDE_DIR AND X264_LIBRARIES)
    SET(X264_FOUND TRUE)
else(X264_INCLUDE_DIR AND X264_LIBRARIES)
    FIND_PATH(X264_INCLUDE_DIR NAMES x264.h)
    FIND_LIBRARY(X264_LIBRARIES NAMES x264)

	if (X264_INCLUDE_DIR AND X264_LIBRARIES)
		 set(X264_FOUND TRUE)
	endif (X264_INCLUDE_DIR AND X264_LIBRARIES)

    if(X264_FOUND)
        message(STATUS "Found X264: ${X264_LIBRARIES}")
    else(X264_FOUND)
        message(STATUS "Not Found X264")
    endif(X264_FOUND)


endif(X264_INCLUDE_DIR AND X264_LIBRARIES)